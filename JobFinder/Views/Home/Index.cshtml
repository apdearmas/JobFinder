@model IEnumerable<BusinessDomain.JobOfferListViewModel>


@{
    ViewBag.Title = "Home";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<form method="get">
    <input type="search" name="searchTerm" />
    <input type="search" name="searchTerm_City_State_Zip" />
    <input type="submit" value="Find Jobs" />
</form>


@*@Html.Partial("JobsSelected", Model)*@
@*@Html.ActionLink("Test", "JobsSelected")*@

@foreach (var item in Model)
{
    <div>
        <h4>@item.Title</h4>
        <div>Issue: @item.IssuedDate, Expiration: @item.ExpirationDate</div>
        <div>City: @item.Location.City, State: @item.Location.State, ContactPerson: @item.ContactPerson.Name</div>
        <div>
            @item.Description
        </div>

        <hr />
    </div>

    
}
